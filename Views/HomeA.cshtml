@using WebApplicationShimi.Controllers
@inherits Umbraco.Web.Mvc.UmbracoViewPage<HomeA>

    <h1>Welcome</h1>
    <div>
        @(Html.Action<HomeAController>("NewsLetter"))
    </div>
    <div class="myslick">
        @if (Model.Carusella.Any())
        {
            foreach (var item in Model.Carusella)
            {
                <div class="image">
                    <img width="200" src="@item.Image.Url" alt="@item.AltText" />
                    <figcaption>@item.Caption</figcaption>
                </div>
            }
        }
    </div>    


@section Scripts
{
    <script>
        $(document).ready(function() {
            $(".myslick").slick({
                slidesToShow: 3,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000,
            });
        });
    </script>
}

